@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer Open="true" DrawerType="DrawerType.Permanent" Elevation="1">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudAppBar Elevation="1">
            <MudText Typo="Typo.h6">BlazorVoice</MudText>
        </MudAppBar>
        <article class="content px-4">
            @Body
        </article>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
